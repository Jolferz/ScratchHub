{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<div class="col-sm-12 main center-me" >
    <!-- resumt -->
    <div class="panel panel-default">
        <div class="panel-heading resume-heading">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-md-10 col-lg-4 col-md-offset-1">
                        {{{ iframe }}}
                    </div>
                    <div class="col-md-12  vertical-center ">
                        <ul class="list-group">
                            <li class="list-group-item box-list-items">
                                <div class="box-info-fields">
                                    <div class="field"><strong>Name:</strong></div>
                                    <div class="info">{{ name }}</div>
                                </div>
                            </li>
                            <li class="list-group-item box-list-items">
                                <div class="box-info-fields">
                                    <div class="field"><strong>Category:</strong></div>
                                    <div class="info">{{ category }}</div>
                                </div>
                            </li>
                            <li class="list-group-item box-list-items">
                                <div class="box-info-fields">
                                    <div class="field"><strong>Developed by:</strong></div>
                                    <div class="info"><a href="/profile/{{ authorLink }}"> {{ authorLink }}</a></div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                {{#if modBtns}}
                    <div id="delete-btn">
                        <button id="project-delete-btn">Delete</button>
                    </div>
                    <div id="edit-btn">
                        <a href="/project/{{ name }}/update-project"><button>Edit</button></a>
                    </div>
                {{/if}}
            </div>
        </div>
        <div class="bs-callout bs-callout-danger project-description">
            <h4>Description</h4>
            <p>
                {{ description }}
            </p>
        </div>               
    </div>
</div>

<!-- Comments -->
<div class="container">
    <div class="row">
        <div class="col-md-10 col-centered">
            {{#each comments}}
                <div class="widget-area no-padding blank">
                    <div class="comment-user" ><i class="fa fa-user"></i><a href="/profile/{{ this.commenter }}">{{ this.commenter.username }}</a></div>
                    {{#compare this.commenter._id ../userId}}
                        <div id="delete-comment-btn">
                            <a href="/comment/{{ ../name }}/{{ this._id }}/delete"><i class="glyphicon glyphicon-remove"></i></a>
                        </div>                    
                    {{/compare}}
                    <div class="msg-box">
                        <p>{{ this.comment }}</p>
                    </div>
                    <span class="comment date">{{ this.postDate }}</span>   
                </div>
            {{/each}}
        </div>
    </div>
</div>

<!-- Comments form -->
<div class="container">
    <div class="row">
        <div class="col-md-10 col-centered">
            <div class="widget-area no-padding blank">
                <div class="status-upload">
                    <fieldset>
                        <form method="post" action="/comment/{{ name }}">
                            <textarea type="text" class="form-control" name="comment" placeholder="Say something nice..." ></textarea>                
                            <button type="submit" class="btn post">Post</button>
                        </form>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>

